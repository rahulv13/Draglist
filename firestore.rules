
/**
 * @fileoverview Firestore Security Rules for the RahulList application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model, ensuring that users can only access their own data.
 *
 * Data Structure:
 * All data is nested under /users/{userId}, providing a clear ownership hierarchy.
 *
 * Key Security Decisions:
 * - User listing is explicitly disallowed to prevent enumeration vulnerabilities.
 * - The rules explicitly deny all potentially ambiguous operations to enforce a secure-by-default posture.
 *
 * Denormalization for Authorization:
 *  The rules leverage path-based ownership to avoid the need for complex data lookups or joins during authorization checks.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile information.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' can create their own profile.
     *     - Auth: { uid: 'user123' }
     *     - Request Data: { id: 'user123', username: 'testuser', email: 'test@example.com', dateJoined: '2024-01-01T00:00:00Z' }
     * @allow (get) User with ID 'user123' can read their own profile.
     *     - Auth: { uid: 'user123' }
     * @allow (update) User with ID 'user123' can update their own profile.
     *     - Auth: { uid: 'user123' }
     * @allow (delete) User with ID 'user123' can delete their own profile.
     *     - Auth: { uid: 'user123' }
     * @deny (create) User with ID 'user123' cannot create a profile for 'user456'.
     *     - Auth: { uid: 'user123' }
     *     - Request Data: { id: 'user456', username: 'testuser', email: 'test@example.com', dateJoined: '2024-01-01T00:00:00Z' }
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false; // User listing is disallowed.
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isSignedIn() && isExistingOwner(userId);

      /**
       * @description Controls access to a user's anime and manga titles.
       * @path /users/{userId}/titles/{titleId}
       * @principle Enforces that only the owner of the parent user document can manage titles.
       */
      match /titles/{titleId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) && isValidTitleCreate(request.resource.data);
        allow update: if isOwner(userId) && isValidTitleUpdate(request.resource.data);
        allow delete: if isOwner(userId);
      }
    }

    // --- Helper Functions ---

    /**
     * @description Checks if the user is signed in.
     * @return {bool} True if the user is authenticated, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the request is made by the owner of the document.
     * @param {string} userId The user ID from the document path.
     * @return {bool} True if the user ID matches the authenticated user's ID, false otherwise.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the request is made by the owner of an existing document.
     * @param {string} userId The user ID from the document path.
     * @return {bool} True if the user ID matches the authenticated user's ID and the resource exists.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId));
    }

    /**
     * @description Validates the fields of a 'Title' document on creation.
     * @param {map} data The incoming resource data.
     * @return {bool} True if the data is valid, false otherwise.
     */
    function isValidTitleCreate(data) {
      return data.title is string &&
             data.type is string && data.type in ['Anime', 'Manga', 'Manhwa'] &&
             data.status is string && data.status in ['Watching', 'Reading', 'Planned', 'Completed'] &&
             data.progress is number &&
             data.total is number &&
             data.score is number && data.score >= 0 && data.score <= 10 &&
             data.imageUrl is string &&
             data.createdAt is timestamp;
    }

    /**
     * @description Validates the fields of a 'Title' document on update.
     * Ensures that immutable fields are not changed.
     * @param {map} data The incoming resource data from the request.
     * @return {bool} True if the update is valid, false otherwise.
     */
    function isValidTitleUpdate(data) {
      // Get the existing document's data for comparison
      let existingData = resource.data;

      // Fields that can be updated
      let canUpdateStatus = data.keys().hasAny(['status']) && data.status is string && data.status in ['Watching', 'Reading', 'Planned', 'Completed'];
      let canUpdateProgress = data.keys().hasAny(['progress']) && data.progress is number && data.progress >= 0;
      let canUpdateScore = data.keys().hasAny(['score']) && data.score is number && data.score >= 0 && data.score <= 10;
      let canUpdateTotal = data.keys().hasAny(['total']) && data.total is number;
      let canUpdateTimestamp = data.keys().hasAny(['updatedAt']) && data.updatedAt is timestamp;
      
      // Ensure only allowed fields are being updated
      let allowedUpdateKeys = ['status', 'progress', 'score', 'total', 'updatedAt', 'title', 'type', 'imageUrl'];
      let areKeysValid = data.keys().hasOnly(allowedUpdateKeys);

      // Check immutable fields: createdAt should not change
      let areImmutableFieldsUnchanged = !data.keys().hasAny(['createdAt']);
      
      return areKeysValid && areImmutableFieldsUnchanged;
    }
  }
}
